#!/bin/bash
hash docker-compose || exit 1
hash tmux || exit 1
hash watch || exit 1

session="hubs-compose"
tmux new-session -d -s $session
window=0
tmux rename-window -t $session:$window 'observer'
tmux send-keys -t $session:$window 'watch docker-compose ps' C-m
tmux split-window -t $session:$window
tmux send-keys -t $session:$window 'docker-compose logs --follow --timestamps --tail="all"' C-m
tmux attach-session -t $session
